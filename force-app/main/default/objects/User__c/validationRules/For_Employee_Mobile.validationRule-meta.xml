<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>For_Employee_Mobile</fullName>
    <active>false</active>
    <errorConditionFormula>OR(
   ISCHANGED(P_Mobile__c),
   AND(
      NOT(ISBLANK(P_Mobile__c)),
      NOT(LEN(P_Mobile__c) = 10)
   )
)</errorConditionFormula>
    <errorMessage>Please enter the correct number for mobile.</errorMessage>
</ValidationRule>
